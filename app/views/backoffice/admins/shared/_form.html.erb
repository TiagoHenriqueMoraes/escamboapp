
<h1 class="page-header">Admins</h1>

<%if @admin.errors.any?%>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @admin.errors.full_messages.each do |message| %>
            <li><%=message%></li>
        <%end%>
    </ul>
    </div>
<%end%>
<div class="panel panel-default">
<div class="panel-heading">
    <%= action %>
</div>
<div class="panel-body">
    <div class="col-lg-6">
        <%# esse backoffice é para indicar a rota da variavel por estarmos em uma subpastas%>
        <%= form_for [:backoffice, @admin] do |f|%>
        <div class="form-group">
            <label>Email</label>
            <%= f.text_field :email, class:"form-control", placeholder: "Adm Email"%>
        </div>
        <div class="form-group">
            <label>Password</label>
            <%= f.password_field :password, class:"form-control", placeholder: "Password"%>
        </div><div class="form-group">
            <label>Password Confirmation</label>
            <%= f.password_field :password_confirmation, class:"form-control", placeholder: "Repeat Password"%>
        </div>
        <%= f.submit "Save", :class => "btn btn-default" %>
        <%end%>
    </div>
</div>
</div>
