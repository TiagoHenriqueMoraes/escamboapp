

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Categories</h1>
                <div class="panel panel-default">
                <div class="panel-heading">
                    Categories
                    <button type="button" class="btn btn-success btn-circle pull-right" style="margin-top: -5px"><i class="fa fa-link"></i>
                            </button>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            <% @categories.each do |category|%>
                                <tr>
                                    <td><%=category.id%></td>
                                    <td><%=category.description%></td>
                                    <td style="width: 150px">
                                        <%= link_to edit_backoffice_category_path(category), class: "btn btn-primary btn-circle" do %>
                                        <i class="fa fa-edit"></i>
                                        <%end%>
                                        <button type="button" disabled= "disable" class="btn btn-danger btn-circle">
                                        <i class="fa fa-times"></i>
                                        </button>
                                    </td>
                                </tr>
                            <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>